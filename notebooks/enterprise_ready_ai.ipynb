# SECTION 1: SETUP
import os, requests, json, pandas as pd

# Enter your IBM Cloud API key here (securely in watsonx environment)
IBM_API_KEY = "YOUR_API_KEY"

def get_iam_token(api_key: str):
    url = "https://iam.cloud.ibm.com/identity/token"
    data = {
        "grant_type": "urn:ibm:params:oauth:grant-type:apikey",
        "apikey": api_key
    }
    headers = {"Content-Type": "application/x-www-form-urlencoded"}
    response = requests.post(url, data=data, headers=headers)
    response.raise_for_status()
    return response.json()["access_token"]

ACCESS_TOKEN = get_iam_token(IBM_API_KEY)
print("IBM Cloud IAM token acquired.")

