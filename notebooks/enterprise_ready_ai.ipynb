# ================================================================
# SECTION 3: GRANITE MODEL INFERENCE (watsonx.ai)
# ================================================================
endpoint = "https://us-south.ml.cloud.ibm.com/ml/v1/text/generation"
headers = {
    "Authorization": f"Bearer {ACCESS_TOKEN}",
    "Content-Type": "application/json"
}

def query_granite(prompt, model_id="ibm-granite-13b-instruct"):
    payload = {
        "model_id": model_id,
        "input": prompt,
        "parameters": {
            "decoding_method": "greedy",
            "max_new_tokens": 150,
            "temperature": 0.3
        }
    }
    response = requests.post(endpoint, headers=headers, json=payload)
    response.raise_for_status()
    return response.json()["results"][0]["generated_text"]

prompt = "Summarize compliance and lending risk factors described in the bank policy."
summary = query_granite(prompt)
print("Model Output:\n", summary)

# ================================================================
# SECTION 4: SIMPLE RISK EVALUATION (DEMO)
# ================================================================
def evaluate_risk(text):
    keywords = ["default", "noncompliance", "fraud", "threshold", "liability"]
    hits = sum(1 for word in keywords if word in text.lower())
    return round(min(hits / len(keywords), 1.0), 2)

risk_score = evaluate_risk(summary)
print(f"Derived Risk Score: {risk_score}")

# ================================================================
# SECTION 5: EXPORT RESULTS
# ================================================================
output = {
    "summary": summary,
    "risk_score": risk_score
}
with open("../data/bank_policy_summary.json", "w") as f:
    json.dump(output, f, indent=2)

print("Summary and risk score saved to /data/bank_policy_summary.json")
